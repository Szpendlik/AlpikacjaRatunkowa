<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true" android:state_pressed="false">
        <shape>
            <solid android:color="@color/winterEditTextBackgroundFocused" />
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="@color/winterBackground" />
        </shape>
    </item>
    <item android:state_focused="false" android:state_pressed="true">
        <shape>
            <solid android:color="@color/winterBackground" />
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="@color/winterEditTextOutlinePressed" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/winterEditTextBackground" />
            <corners android:radius="10dp" />
            <stroke android:width="2dp" android:color="@color/light_blue_900" />
        </shape>
    </item>
</selector>
